{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[cds]": {
    "editor.defaultFormatter": "SAPSE.vscode-cds"
  },
  "eslint.validate": [
    "cds",
    "csn",
    "csv",
    "csv",
    "csv (semicolon)",
    "tsv",
    "tab"
  ]
}
