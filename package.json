{
  "name": "js-project-template",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "node --test",
    "lint": "eslint src/**/*.js",
    "release": "npx standard-version --no-verify && git push --follow-tags origin main",
    "coverage": "node --test --test-reporter node-test-github-reporter",
    "format": "npx prettier -w src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VirtualOctopus/VirtualOctopusJS.git"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "devDependencies": {
    "@types/node": "^18.16.18",
    "eslint": "^8.43.0",
    "node-test-github-reporter": "^1.1.3",
    "prettier": "^2.8.8"
  },
  "jest": {
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "src/**/*",
      "!**/node_modules/**"
    ],
    "transform": {},
    "testEnvironment": "node",
    "testRegex": "/test/.*\\.test\\.[m]?js$",
    "moduleFileExtensions": [
      "js",
      "mjs",
      "json"
    ]
  }
}
